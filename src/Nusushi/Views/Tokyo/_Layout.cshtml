@{
    Layout = "/Views/Shared/_Layout.cshtml";
    // TODO check client script integrity
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/assets/tokyoclient.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/assets/tokyoclient.css" />
    </environment>
}

@RenderBody()

@section Footer {
    <div class="body-content" style="flex: 0 0 auto; height: auto">
        <hr style="margin:0" />
        <footer>
            <p style="margin:0">&copy; @DateTime.UtcNow.Year - DEMO - ヌスシ</p>
        </footer>
    </div>
}

@section Scripts {
    @RenderSection("Scripts", required: false)
    <environment include="Development">
        <script src="~/assets/tokyoclient.js"
                asp-append-version="true">
        </script>
    </environment>
    <environment exclude="Development">
        <script src="~/assets/tokyoclient.js"
                asp-append-version="true">
        </script>
    </environment>
}
